generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  firstName String
  lastName  String
  email     String    @unique
  password  String
  role      Role
  orders    Order[]
  products  Product[]

  @@map("users")
}

model Product {
  id        String  @id @default(uuid())
  sellerId  String
  price     Decimal
  quality   Decimal
  seller    User    @relation(fields: [sellerId], references: [id])
  orders    Order[]
  accountId String?
}

model Order {
  productId  String
  customerId String
  date       DateTime
  quantity   Int
  product    Product  @relation(fields: [productId], references: [id])
  customer   User     @relation(fields: [customerId], references: [id])
  accountId  String?

  @@unique([productId, customerId])
}

enum Role {
  ADMIN
  USER
  CUSTOMER
}
