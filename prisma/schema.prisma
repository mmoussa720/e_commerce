generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id        String  @id @default(uuid())
  sellerId  String
  price     Decimal
  quality   Decimal
  accountId String?
  orders    Order[]
  seller    User   @relation(fields: [sellerId], references: [id])

  @@map("products")
}

model Order {
  productId  String
  customerId String
  date       DateTime
  quantity   Int
  accountId  String?
  customer   User    @relation(fields: [customerId], references: [id])
  product    Product  @relation(fields: [productId], references: [id])

  @@unique([productId, customerId])
  @@map("orders")
}

model User {
  id        String    @id @default(uuid())
  firstName String
  lastName  String
  email     String    @unique
  password  String
  role      Role
  Order     Order[]
  products  Product[]

  @@map("users")
}

enum Role {
  ADMIN
  USER
  CUSTOMER
}
