generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id       String  @id @default(uuid())
  sellerId String
  picture  String?
  price    Decimal @db.Decimal(8, 3)
  orders   Order[]
  seller   User    @relation(fields: [sellerId], references: [id])

  @@map("products")
}

model Order {
  id         String   @id @default(uuid())
  productId  String
  customerId String
  date       DateTime
  quantity   Int      @default(1)
  accountId  String?
  customer   User     @relation(fields: [customerId], references: [id])
  product    Product  @relation(fields: [productId], references: [id])

  @@map("orders")
}

model User {
  id          String    @id @default(uuid())
  firstName   String
  lastName    String
  description String?
  stock       Int       @default(0)
  email       String    @unique
  password    String
  verified    Boolean   @default(false)
  role        Role
  Order       Order[]
  products    Product[]
  createdAt   DateTime  @default(now())

  @@map("users")
}

enum Role {
  ADMIN
  USER
}
